<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:padding="@dimen/padding25"
    tools:context=".YellowActivity">

    <TextView
        android:id="@+id/market"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/padding"
        android:paddingHorizontal="@dimen/cardview_default_elevation"
        android:gravity="center"
        android:paddingVertical="@dimen/padding25"
        android:text="@string/market"
        android:textSize="@dimen/padding_big"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="@dimen/padding25"
        app:layout_constraintTop_toBottomOf="@id/menu"
        android:layout_marginTop="@dimen/padding25"

        />
    <ImageView
        android:id="@+id/menu"
        android:layout_width="@dimen/padding25"
        android:layout_height="@dimen/padding25"
        android:src="@drawable/ic_baseline_dashboard_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:layout_width="@dimen/padding25"
        android:layout_height="@dimen/padding25"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/icon_start"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="@id/market"
        android:layout_marginTop="@dimen/padding25"
        android:src="@drawable/ic_baseline_auto_awesome_24"
        app:layout_constraintTop_toBottomOf="@id/market"
        app:layout_constraintStart_toStartOf="@id/market" />

    <ImageView
        android:layout_width="@dimen/image_height1"
        android:layout_height="@dimen/image_height1"
        app:layout_constraintTop_toTopOf="@id/market"
        app:layout_constraintEnd_toEndOf="@id/market"
        android:layout_marginRight="@dimen/padding25"
        android:layout_marginTop="@dimen/padding25"
        android:src="@drawable/ic_baseline_light_mode_24" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        app:icon="@drawable/ic_baseline_arrow_forward_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint= "@color/black"
        app:iconSize="16dp"
        android:textAllCaps="false"
        app:iconGravity="end"
        app:cornerRadius="100dp"
        app:iconTint="@color/white"
        android:textColor="@color/white"
        android:text="@string/getstarted"/>

</androidx.constraintlayout.widget.ConstraintLayout>
